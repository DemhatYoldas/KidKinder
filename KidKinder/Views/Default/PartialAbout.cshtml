@using KidKinder.Entities
@model Tuple<List<About>,List<AboutList>>

<div class="container-fluid py-5">
    @foreach (var item in Model.Item1)
    {
       <div class="container">
           <div class="row align-items-center">
               <div class="col-lg-5">
                   <img class="img-fluid rounded mb-5 mb-lg-0"
                        src="@item.BigImageUrl"
                        alt="" />
               </div>
               <div class="col-lg-7">
                   <p class="section-title pr-5">
                       <span class="pr-2">@item.Header</span>
                   </p>
                   <h1 class="mb-4">@item.Title</h1>
                   <p>
                       @item.Description
                   </p>
                   <div class="row pt-2 pb-4">
                       <div class="col-6 col-md-4">
                           <img class="img-fluid rounded" src="@item.SmallImageUrl" alt="" />
                       </div>
                       <div class="col-6 col-md-8">
                           @foreach (var x in Model.Item2)
                           {
                               <ul class="list-inline m-0">
                                   <li class="py-2 border-top border-bottom">
                                       <i class="fa fa-check text-primary mr-3"></i>@x.Description
                                   </li>
                                </ul>
                           }

                       </div>
                   </div>
                   <a href="" class="btn btn-primary mt-2 py-2 px-4">Learn More</a>
               </div>
           </div>
       </div>
    }
    
</div>
